<div class="container mt-4">
  <div class="d-flex justify-content-between mt-2 mb-5 rounded">
    <%= link_to 'Previous page', anime_path(page: params[:page].to_i - 1), class: 'btn btn-dark' if params[:page].to_i > 0 %>
    <%= link_to 'Next page', anime_path(page: params[:page].to_i + 1), class: 'btn btn-dark' %>
  </div>
  <div class="row">
    <% @anime_info_data.each do |anime| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow rounded">
          <img class="card-img-top" src="<%= anime['main_picture']['large'] %>" alt="<%= anime['title'] %>">
          <div class="card-body">
            <h5 class="card-title"><%= anime['title'] %></h5>
            <p class="card-text text-truncate" style="max-height: 7em; overflow: hidden;"><%= anime['synopsis'] %></p>
            <p class="card-text">Niklas' Score: <%= anime['my_list_status']['score'] %></p>
            <p class="card-text">Average Score: <%= anime['mean'] %></p>
            <p class="card-text">Year: <%= Date.parse(anime['start_date']).year %></p>
            <p class="card-text">
              Genres:
              <% anime['genres'].each do |genre| %>
                <span class="badge custom-badge"><%= genre['name'] %></span>
              <% end %>
            </p>
          </div>
          <div class="card-footer">
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
              </div>
              <small class="text-muted"><%= anime['status'] %></small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-between mt-2 mb-5 rounded">
    <%= link_to 'Previous page', anime_path(page: params[:page].to_i - 1), class: 'btn btn-dark' if params[:page].to_i > 0 %>
    <%= link_to 'Next page', anime_path(page: params[:page].to_i + 1), class: 'btn btn-dark' %>
  </div>
</div>
