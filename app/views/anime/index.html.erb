<div class="container">
  <div class="row">
    <% @anime_info_data.each do |anime| %>
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm h-100">
          <img class="card-img-top" src="<%= anime['main_picture']['large'] %>" alt="<%= anime['title'] %>">
          <div class="card-body">
            <h5 class="card-title"><%= anime['title'] %></h5>
            <p class="card-text text-truncate" style="max-height: 7em; overflow: hidden;"><%= anime['synopsis'] %></p>
            <p class="card-text">Score: <%= anime['my_list_status']['score'] %></p>
            <p class="card-text">Average Rating: <%= anime['mean'] %></p>
            <p class="card-text">Year: <%= anime['start_date'] %></p>
            <p class="card-text">
              Genres:
              <% anime['genres'].each do |genre| %>
                <span class="badge custom-badge"><%= genre['name'] %></span>
              <% end %>
            </p>
          </div>
          <div class="card-footer">
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
              </div>
              <small class="text-muted"><%= anime['status'] %></small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
